@objects
  google-logo   css #hplogo
  input-search-big  xpath //input[@name='btnK']

= Main box =
    @on mobile
      google-logo:
        visible
    @on tablet
      google-logo:
        visible
    @on desktop
      google-logo:
        visible

= Search section =
    # set the big search input button always as visible
    @on *
      input-search-big:
        visible
    # overriding only for mobile resolutions as absent
    @on mobile
      input-search-big:
        absent
